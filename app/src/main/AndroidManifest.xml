<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.candelario_physicscalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Candelario_PhysicsCalculator">
        <activity
            android:name=".View.ChoosingScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Area.AreaActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Candelario_PhysicsCalculator.NoActionBar"></activity>
        <activity
            android:name=".View.Volume.VolumeActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Candelario_PhysicsCalculator.NoActionBar">
        </activity>
    </application>

</manifest>